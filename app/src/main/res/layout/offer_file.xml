<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/offer_bg"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:elevation="@dimen/activity_vertical_margin"
        android:id="@+id/offerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/border_file"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/r11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:padding="5dp"
                android:textColor="@color/red_error"
                android:gravity="right"
                android:text="@string/offer"
                android:id="@+id/offertvv"
                android:textSize="17sp"
                android:textStyle="bold"

                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/FkImg"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/offertvv"
                android:background="@android:color/background_light" />

            <TextView

                android:padding="5dp"
                android:id="@+id/FkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/FkDesc"
                android:layout_marginTop="22dp"
                android:fontFamily="monospace"
                android:paddingLeft="1dp"
                android:text="Title"
                android:textSize="15sp"
                android:layout_below="@+id/offertvv"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FkDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FkTitle"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/FkImg"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="Place Desc"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/FkEndtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/FkImg"
                android:layout_alignStart="@+id/FkDesc"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="ASFD"
                android:textColor="@color/offercolor"
                android:textSize="13sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>