<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/offer_bg"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:elevation="@dimen/activity_vertical_margin"
        android:id="@+id/offerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/border_file"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/r11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:id="@+id/FkImg"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/background_light" />

            <TextView
                android:id="@+id/FkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/FkDesc"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:paddingLeft="10dp"
                android:text="Title"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FkDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FkTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/FkImg"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Place Desc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/FkStartime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/FkDesc"
                android:layout_below="@+id/FkDesc"
                android:fontFamily="casual"
                android:padding="5dp"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/FkEndtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/FkStartime"
                android:layout_below="@+id/FkStartime"
                android:fontFamily="casual"
                android:padding="5dp"
                android:textSize="8dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>