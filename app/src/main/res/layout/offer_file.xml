<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/offer_bg"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:elevation="@dimen/activity_vertical_margin"
        android:id="@+id/offerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/border_file"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/r11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/offerImg"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/background_light" />

            <TextView
                android:fontFamily="casual"
                android:id="@+id/FkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/offerImg"
                android:paddingLeft="10dp"
                android:text="Title"
                android:textSize="15sp"
                android:textStyle="bold" />


            <!--/>-->

            <TextView
                android:fontFamily="casual"
                android:id="@+id/offerDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FkTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/offerImg"
                android:padding="5dp"
                android:text="Place Desc"
                android:textSize="13sp" />



            <TextView
                android:fontFamily="casual"
                android:id="@+id/offerAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offerDesc"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/offerImg"
                android:padding="3dp"
                android:text="@string/avail"
                android:textSize="13sp" />

            <TextView
                android:fontFamily="casual"
                android:id="@+id/FlipkartproSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/FlipkartproPriceSellingWords"
                android:layout_below="@+id/offerDesc"
                android:layout_toRightOf="@+id/offerAvailable"
                android:padding="2dp"
                android:text="@string/b"
                android:textColor="@color/red_error"
                android:textSize="13sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>