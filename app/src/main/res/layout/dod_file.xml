<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/offer_bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/dodCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_file"
        android:elevation="@dimen/activity_vertical_margin"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/r11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/offertv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:text="@string/dod"
                android:textColor="@color/red_error"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/FkImg"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"

                android:layout_below="@+id/offertv"
                android:layout_marginLeft="10dp"
                android:background="@android:color/background_light" />

            <TextView
                android:id="@+id/FkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offertv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/FkImg"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />


            <!--/>-->

            <TextView
                android:id="@+id/FkDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FkTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/FkImg"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="Place Desc"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>