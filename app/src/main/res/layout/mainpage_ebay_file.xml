<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/EbaycardView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/EbayprooImg"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/background_light" />

            <TextView
                android:id="@+id/EbayproTitlee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/EbayprooImg"
                android:paddingLeft="5dp"
                android:text="asd"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EbayPriceSellingWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/EbayproTitlee"
                android:layout_below="@+id/EbayproTitlee"
                android:layout_marginTop="3dp"
                android:padding="3dp"
                android:textSize="13dp"
                android:text="Ebay's Price: " />

            <TextView
                android:id="@+id/EbayproPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/EbayPriceSellingWords"
                android:layout_alignBottom="@+id/EbayPriceSellingWords"
                android:layout_toEndOf="@+id/EbayPriceSellingWords"
                android:padding="3dp"
                android:textSize="13dp"
                android:text="@string/b"
                android:textColor="@color/red_error" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>