<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/DatayugecardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/datayugeprooImg"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/background_light" />

            <TextView
                android:id="@+id/datayugeproTitlee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/datayugeprooImg"
                android:paddingLeft="5dp"
                android:text="asd"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/datayugeprooImg"
                android:layout_alignStart="@+id/datayugeproTitlee"
                android:padding="3dp"
                android:text="@string/setb"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnDatayugeBookMark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/tt"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="31dp"
                android:background="@drawable/ic_star_border_black_24dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>